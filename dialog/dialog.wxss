/* dialog/dialog.wxss */

.dialog-container {
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.mask {
    width: 100%;
    background: #000;
    opacity: 0;
    position: fixed;
    top: 0;
    animation: maskAnim 300ms forwards;
}

@keyframes maskAnim {
    from {
        opacity: 0;
    }

    to {
        opacity: 0.35;
    }
}

.dialog {
    position: fixed;
    top: -310rpx;
    width: 80%;
    height: 300rpx;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 15rpx;
    box-shadow: 0rpx 0rpx 40rpx #666;
}
